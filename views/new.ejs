<%- include ("partials/header") %>

    <div class="ui main text container segment">
        <div class="ui huge header">New Blog</div>
        <form class="ui large form" action="/blogs" method="post">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Enter a title">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="Enter image url">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" cols="30" rows="10"></textarea>
            </div>
            <button class="ui primary large inverted button">Submit</button>
        </form>
    </div>


    <%- include ("partials/footer") %>